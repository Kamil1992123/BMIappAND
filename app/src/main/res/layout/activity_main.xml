<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/sheight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etHeight"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="@+id/etHeight"
            android:layout_marginBottom="8dp" android:layout_marginStart="16dp" android:textSize="24sp"/>
    <TextView
            android:text="@string/sweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWeight"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="24sp"
            android:layout_marginBottom="49dp" app:layout_constraintBottom_toTopOf="@+id/buttonOblicz"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etHeight"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="132dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etWeight"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@+id/tvWeight" app:layout_constraintBottom_toBottomOf="@+id/tvWeight"/>
    <Button
            android:text="@string/sbuttonOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOblicz"
            app:layout_constraintStart_toStartOf="@+id/etResult" android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/etResult"
            style="@style/Widget.AppCompat.Button.Colored"/>
    <TextView
            android:text="@string/sshow_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvResult"
            android:layout_marginBottom="144dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="24sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etResult"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tvResult"
            android:layout_marginEnd="36dp" app:layout_constraintTop_toTopOf="@+id/tvResult"
            app:layout_constraintVertical_bias="0.615"/>
    <TextView
            android:text="@string/sgive_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetails" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>